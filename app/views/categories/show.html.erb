<h1 align="center" class="listing_titles"><%= "Category: " + @category.name %></h1>

<!-- Pagination links -->
<div align="center">
  <!-- Admins can edit categories -->
  <% if logged_in? && current_user.admin? %>
    <div class="row" id="category_edit_link">
      <span class="badge"><%= link_to "Edit category name", edit_category_path(@category) %></span>
    </div>
  <% end %>
  <%= will_paginate @category_articles %>
</div>

<%= render 'articles/article', obj: @category_articles %>

<div align="center">
  <%= will_paginate @category_articles %>
</div>
