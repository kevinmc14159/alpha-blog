<h1 align="center" class="custom_font">Listing all categories</h1>

<div align="center">
  <%= will_paginate %>
  <!-- Iterate through all categories and list them -->
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title custom_font">
            <%= link_to "#{category.name}", category_path(category) %>
          </li>
          <li>
            <small>
              <%= pluralize(category.articles.count, "article") %>
            </small>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
