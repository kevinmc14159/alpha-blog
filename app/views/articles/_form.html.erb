<!-- Partial for article submission form -->
<% if @article.errors.any? %>
  <h2>The following errors prevented the article from getting created:</h2>
  <ul>
    <!-- List any/all error messages -->
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class='row'>
  <div class="col-xs-12">
    <%= form_for(@article, :html => { class: "form-horizontal", role: "form" }) do |f| %>

      <!-- Title -->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %> 
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>

      <!-- Description -->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-info btn-lg"%>
        </div>
      </div>

    <% end %>

    <div class="col-xs-4 col-xs-offset-5">
      [ <%= link_to "Cancel request and return to listing", articles_path %> ]
    </div>
  </div>
</div>
