<h1 align="center" class="listing_titles">All Alpha Bloggers</h1>

<div align="center">
  <!-- Pagination links -->
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <!-- Gravatar and username go to user profile -->
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li>
            <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
          </li>

          <!-- Delete user functionality for admins -->
          <% if logged_in? && current_user.admin? %>
            <li>
              <%= link_to "Delete this user", user_path(user), method: :delete, 
                  data: { confirm: "Are you sure you want to delete this user and all their articles?" } %>
            </li>
          <% end %>

        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
